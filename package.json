{
  "name": "observable-slice",
  "version": "0.0.20-2",
  "description": "An observable for global state that can be subscribed to with react hooks, or callbacks",
  "license": "MIT",
  "author": {
    "name": "Teague Stockwell",
    "email": "tsappdevelopment@gmail.com",
    "url": "https://teaguestockwell.com"
  },
  "homepage": "https://github.com/teaguestockwell/observable-slice",
  "repository": {
    "type": "git",
    "url": "https://github.com/teaguestockwell/observable-slice"
  },
  "types": "./dist/index.d.ts",
  "type": "module",
  "source": "./src/index.ts",
  "main": "./dist/index.cjs",
  "umd:main": "./dist/index.umd.js",
  "module": "./dist/index.module.js",
  "exports": {
    "require": "./dist/index.cjs",
    "default": "./dist/index.modern.js"
  },
  "keywords": [
    "redux",
    "zustand",
    "jotai",
    "rxjs",
    "state",
    "mobx",
    "xstate"
  ],
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "rm -rf ./dist && microbundle --sourcemap false --tsconfig tsconfig.json --visualize --external react --name observable-slice",
    "test": "tsdx test",
    "lint": "tsdx lint src",
    "prepare": "yarn build"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@testing-library/react": "^13.3.0",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.5",
    "@types/use-sync-external-store": "^0.0.3",
    "babel-jest": "^29.2.2",
    "husky": "^8.0.1",
    "microbundle": "^0.15.0",
    "react": "^18.1.0",
    "react-dom": "^18.2.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.2"
  },
  "dependencies": {
    "use-sync-external-store": "^1.2.0"
  }
